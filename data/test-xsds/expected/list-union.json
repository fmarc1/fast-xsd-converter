{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "Root": {
      "type": "object",
      "properties": {
        "values": {
          "$ref": "#/$defs/MixedList"
        }
      },
      "required": ["values"]
    }
  },
  "required": ["Root"],
  "$defs": {
    "MixedList": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "integer"
          }
        ]
      }
    }
  }
}
