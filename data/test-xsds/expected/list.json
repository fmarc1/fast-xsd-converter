{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "Root": {
      "type": "object",
      "properties": {
        "tags": {
          "$ref": "#/$defs/TagList"
        },
        "colors": {
          "$ref": "#/$defs/ColorList"
        }
      },
      "required": ["tags"]
    }
  },
  "required": ["Root"],
  "$defs": {
    "TagList": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "Color": {
      "type": "string",
      "enum": ["red", "green", "blue"]
    },
    "ColorList": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Color"
      }
    }
  }
}
