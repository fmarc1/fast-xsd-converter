{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"module": "ESNext",
		"target": "ES2020",
		"removeComments": true
	},
	"include": ["src/**/*.ts"]
}
